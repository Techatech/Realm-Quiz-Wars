{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "realm-quiz-wars",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "redis": true
  },
  "menu": {
    "items": [
      {
        "label": "Create a new Realm Quiz Wars game",
        "description": "Start a new knowledge battle between Reddit communities",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "media": {
    "dir": "assets"
  },
  "dev": {
    "subreddit": "realm_quiz_wars_dev"
  }
}